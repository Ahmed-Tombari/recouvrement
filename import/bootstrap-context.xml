<?xml version='1.0' encoding='UTF-8'?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
          http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <!-- The bootstrap-context.xml file is used for patch definitions, importers, 
		 workflow, and loading custom content models.  -->

    <!-- Registration of new models -->
    <bean id="recouvrement-repo.dictionaryBootstrap" parent="dictionaryModelBootstrap" depends-on="dictionaryBootstrap">
        <property name="models">
            <list>
                <value>alfresco/module/recouvrement-repo/model/content-model.xml</value>
                <value>alfresco/module/recouvrement-repo/model/workflow-model.xml</value>
                <value>alfresco/module/recouvrement-repo/model/dossierRecouvrementPRE.xml</value>
                <value>alfresco/module/recouvrement-repo/model/dossierRecouvrementCt.xml</value>
                <value>alfresco/module/recouvrement-repo/model/dossierRecouvrementWF.xml</value>
                <value>alfresco/module/recouvrement-repo/model/DossierRecouvrementConfig.xml</value>
		        <value>alfresco/module/recouvrement-repo/model/tiersModel.xml</value>
		        <value>alfresco/module/recouvrement-repo/model/chargeModel.xml</value>
            </list>
        </property>
        <property name="labels">
            <list>
                <!-- Bootstrap Resource Bundles for the content model types, aspects, properties etc -->
                <value>alfresco/module/recouvrement-repo/messages/content-model</value>
            </list>
        </property>
    </bean>

    <bean id="com.addinn.sampleprocess.workflowBootstrap" parent="workflowDeployer">
        <property name="workflowDefinitions">
            <list>
                <props>
                    <prop key="engineId">activiti</prop>
                    <prop key="location">alfresco/module/recouvrement-repo/workflow/PhaseAmiable.bpmn</prop>
                    <prop key="mimetype">text/xml</prop>
		    <prop key="redeploy">true</prop>
                </props>
                <props>
                    <prop key="engineId">activiti</prop>
                    <prop key="location">alfresco/module/recouvrement-repo/workflow/PhasePrecontentieuse.bpmn</prop>
                    <prop key="mimetype">text/xml</prop>
		    <prop key="redeploy">true</prop>
                </props>
                <props>
                    <prop key="engineId">activiti</prop>
                    <prop key="location">alfresco/module/recouvrement-repo/workflow/PhaseContentieuse.bpmn</prop>
                    <prop key="mimetype">text/xml</prop>
		    <prop key="redeploy">true</prop>
                </props>
            </list>
        </property>
        <property name="labels">
            <list>
                <value>alfresco/module/recouvrement-repo/messages/workflow-messages</value>
            </list>
        </property>
    </bean>
</beans>
